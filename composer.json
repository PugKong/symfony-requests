{
  "name": "pugkong/symfony-requests",
  "type": "library",
  "license": "Unlicense",
  "description": "A lightweight PHP library for making HTTP requests and handling responses using Symfony components",
  "keywords": [
    "symfony",
    "http-client",
    "serializer"
  ],
  "homepage": "https://github.com/PugKong/symfony-requests",
  "authors": [
    {
      "name": "Pug Kong",
      "email": "pugkong@tuta.io"
    }
  ],
  "require": {
    "php": ">=8.2",
    "symfony/http-client": "^6.4|^7.0",
    "symfony/serializer-pack": "^1.3"
  },
  "autoload": {
    "psr-4": {
      "Pugkong\\Symfony\\Requests\\": "src/"
    }
  },
  "require-dev": {
    "guzzlehttp/uri-template": "^1.0"
  },
  "autoload-dev": {
    "psr-4": {
      "Pugkong\\Symfony\\Requests\\Tests\\": "tests/"
    }
  },
  "archive": {
    "exclude": [
      "/echoserver"
    ]
  }
}
